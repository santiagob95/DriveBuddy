<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment"
    android:background="#494949">



    <LinearLayout
        android:id="@+id/linear_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="20dp">


        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:text="Bienvenido de vuelta, Martin"
            android:textAlignment="textStart"
            android:paddingLeft="15dp"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            tools:layout_editor_absoluteY="50dp">



            <TextView
                android:id="@+id/textView6"
                android:layout_width="161dp"
                android:layout_height="16dp"
                android:layout_alignBottom="@+id/textView7"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/montserrat_bold"
                android:text="Te mostramos cómo fueron tus"
                android:textAlignment="textEnd"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.08"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.045" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="128dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"

                android:fontFamily="@font/montserrat_bold"
                android:text="últimos viajes"
                android:textAlignment="textStart"
                android:textColor="#EBEE4D"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.05"
                app:layout_constraintStart_toEndOf="@+id/textView6"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:layout_marginBottom="100dp">


            <TextView
                android:id="@+id/title1"
                android:layout_width="117dp"
                android:layout_height="18dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="Tiempo manejado "
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:translationZ="20dp"
                app:layout_constraintBottom_toBottomOf="@+id/view0"
                app:layout_constraintEnd_toEndOf="@+id/view0"
                app:layout_constraintHorizontal_bias="0.492"
                app:layout_constraintStart_toStartOf="@+id/view0"
                app:layout_constraintTop_toTopOf="@+id/view0"
                app:layout_constraintVertical_bias="0.157" />

            <TextView
                android:id="@+id/param1"
                android:layout_width="113dp"
                android:layout_height="57dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="423 hs"
                android:textColor="#EBEE4D"
                android:textSize="35sp"
                android:translationZ="20dp"
                app:layout_constraintBottom_toBottomOf="@+id/view0"
                app:layout_constraintEnd_toEndOf="@+id/view0"
                app:layout_constraintStart_toStartOf="@+id/view0"
                app:layout_constraintTop_toBottomOf="@+id/title1" />






            <View
                android:id="@+id/view0"
                android:layout_width="140dp"
                android:layout_height="183dp"
                android:background="@drawable/consejos_rounded"
                android:translationZ="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.122"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.038"
                tools:ignore="DuplicateIds,MissingConstraints" />

            <View
                android:id="@+id/view1"
                android:layout_width="139dp"
                android:layout_height="183dp"
                android:background="@drawable/consejos_rounded"
                android:translationZ="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.106"
                app:layout_constraintStart_toEndOf="@+id/view0"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.038"
                tools:ignore="DuplicateIds,MissingConstraints" />

            <View
                android:id="@+id/view2"
                android:layout_width="140dp"
                android:layout_height="183dp"
                android:background="@drawable/consejos_rounded"
                android:translationZ="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.122"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view0"
                app:layout_constraintVertical_bias="0.036"
                tools:ignore="DuplicateIds,MissingConstraints" />

            <View
                android:id="@+id/view3"
                android:layout_width="140dp"
                android:layout_height="183dp"
                android:background="@drawable/consejos_rounded"
                android:translationZ="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.108"
                app:layout_constraintStart_toEndOf="@+id/view2"
                app:layout_constraintTop_toBottomOf="@+id/view1"
                app:layout_constraintVertical_bias="0.036"
                tools:ignore="DuplicateIds,MissingConstraints" />

            <View
                android:id="@+id/view4"
                android:layout_width="140dp"
                android:layout_height="183dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/consejos_rounded"
                android:translationZ="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.122"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view2"
                app:layout_constraintVertical_bias="0.0" />

            <View
                android:id="@+id/view5"
                android:layout_width="140dp"
                android:layout_height="183dp"
                android:background="@drawable/consejos_rounded"
                android:translationZ="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.108"
                app:layout_constraintStart_toEndOf="@+id/view4"
                app:layout_constraintTop_toBottomOf="@+id/view3"
                app:layout_constraintVertical_bias="0.259" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>

</ScrollView>