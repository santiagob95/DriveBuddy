<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#494949"
    tools:context=".AuthActivity">


    <View
        android:id="@+id/logo_drive_"
        android:layout_width="158dp"
        android:layout_height="167.28dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/ic_logo_b"
        android:elevation="4dp"
        app:layout_constraintBottom_toTopOf="@+id/loginBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.073" />


    <TextView
        android:id="@+id/drive_buddy"
        android:layout_width="293dp"
        android:layout_height="60dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Drive Buddy"
        android:textAppearance="@style/loginTitle"
        app:layout_constraintBottom_toTopOf="@+id/loginBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.677"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_drive_"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/loginBtn"
        android:layout_width="177dp"
        android:layout_height="58dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/rounded_corner"
        android:elevation="4dp"
        android:orientation="vertical"
        android:textColor="#494949"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.618" />


    <TextView
        android:id="@+id/iniciar_ses"
        android:layout_width="126dp"
        android:layout_height="36dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="top"
        android:orientation="vertical"
        android:text="Ingresar"
        android:textAppearance="@style/iniciar_ses"
        android:translationZ="90dp"
        app:layout_constraintBottom_toBottomOf="@+id/bot_border2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.612" />

    <TextView
        android:id="@+id/no_est_s_re"
        android:layout_width="139dp"
        android:layout_height="18dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="top"
        android:text="¿No estás registrado? "
        android:textAppearance="@style/no_est_s_re"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.684" />

    <TextView
        android:id="@+id/makeregisterBtn"
        android:layout_width="74dp"
        android:layout_height="18dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:clickable="true"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="top"
        android:text="@string/registrate"
        android:textAppearance="@style/registrate"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.051"
        app:layout_constraintStart_toEndOf="@+id/no_est_s_re"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.684" />

    <View
        android:id="@+id/separacion_"
        android:layout_width="276.49dp"
        android:layout_height="13dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/sep"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.759" />

    <View
        android:id="@+id/bot_border2"
        android:layout_width="match_parent"
        android:layout_height="109.88dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottom2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/separacion_"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="0dp" />

    <View
        android:id="@+id/googleBtn"
        android:layout_width="162dp"
        android:layout_height="45.56dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/google_login"
        android:elevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.911"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.861" />

    <TextView
        android:id="@+id/facebook"
        android:layout_width="104dp"
        android:layout_height="31dp"
        android:fontFamily="@font/montserrat_bold"
        android:orientation="vertical"
        android:text="Facebook"
        android:textAppearance="@style/facebook"
        android:translationZ="90dp"
        app:layout_constraintBottom_toBottomOf="@+id/facebookBtn"
        app:layout_constraintEnd_toEndOf="@+id/facebookBtn"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/facebookBtn"
        app:layout_constraintTop_toTopOf="@+id/facebookBtn"
        app:layout_constraintVertical_bias="0.6" />

    <TextView
        android:id="@+id/google"
        android:layout_width="88dp"
        android:layout_height="27dp"
        android:fontFamily="@font/montserrat_bold"
        android:orientation="vertical"
        android:text="Google"
        android:textAppearance="@style/facebook"
        android:translationZ="90dp"
        app:layout_constraintBottom_toBottomOf="@+id/googleBtn"
        app:layout_constraintEnd_toEndOf="@+id/googleBtn"
        app:layout_constraintHorizontal_bias="0.77"
        app:layout_constraintStart_toStartOf="@+id/googleBtn"
        app:layout_constraintTop_toTopOf="@+id/googleBtn"
        app:layout_constraintVertical_bias="0.473" />

    <View
        android:id="@+id/facebookBtn"
        android:layout_width="169dp"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/facebook_login"
        android:elevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/googleBtn"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.861" />

    <View
        android:id="@+id/facebook_logo"
        android:layout_width="35dp"
        android:layout_height="32dp"
        android:background="@drawable/ic_facebook"
        android:orientation="vertical"
        android:translationZ="90dp"
        app:layout_constraintBottom_toBottomOf="@+id/facebookBtn"
        app:layout_constraintEnd_toStartOf="@+id/facebook"
        app:layout_constraintStart_toStartOf="@+id/facebookBtn"
        app:layout_constraintTop_toTopOf="@+id/facebookBtn" />

    <View
        android:id="@+id/google_logo"
        android:layout_width="29dp"
        android:layout_height="27dp"
        android:background="@drawable/google_logo"
        android:orientation="vertical"
        android:translationZ="90dp"
        app:layout_constraintBottom_toBottomOf="@+id/googleBtn"
        app:layout_constraintEnd_toStartOf="@+id/google"
        app:layout_constraintStart_toStartOf="@+id/googleBtn"
        app:layout_constraintTop_toTopOf="@+id/googleBtn" />

    <EditText
        android:id="@+id/idPassword"
        android:layout_width="301dp"
        android:layout_height="52dp"
        android:layout_marginBottom="32dp"
        android:drawableStart="@drawable/ic_lock"
        android:drawablePadding="12dp"
        android:ems="10"
        android:hint="Contraseña"
        android:inputType="textPassword"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textColor="@color/whiteColor"
        android:textColorHint="@color/whiteColor"
        android:textSize="15dp"
        android:theme="@style/logintxt"
        app:layout_constraintBottom_toTopOf="@+id/loginBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/drive_buddy"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/idEmail"
        android:layout_width="301dp"
        android:layout_height="52dp"
        android:drawableStart="@drawable/ic_person"
        android:hint="Email o nombre de usuario"
        android:textSize="15dp"
        android:drawablePadding="12dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:paddingStart="10.5dp"
        android:paddingEnd="12dp"
        android:textColor="@color/whiteColor"
        android:textColorHint="@color/whiteColor"
        android:theme="@style/logintxt"
        app:layout_constraintBottom_toTopOf="@+id/idPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/drive_buddy"
        app:layout_constraintVertical_bias="0.518"
        tools:ignore="TextFields" />
</androidx.constraintlayout.widget.ConstraintLayout>