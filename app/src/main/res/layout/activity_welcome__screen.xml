<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#494949"
    tools:context=".Welcome_Screen">


    <TextView
        android:id="@+id/bienvenido"
        android:layout_width="308dp"
        android:layout_height="74dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="top"
        android:orientation="vertical"
        android:text="@string/bienvenido"
        android:textAppearance="@style/bienvenido"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.631"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.278" />

    <TextView
        android:id="@+id/registroBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:clickable="true"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="top"
        android:orientation="vertical"
        android:text="@string/registrate"
        android:textAppearance="@style/registrate"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.025"
        app:layout_constraintStart_toEndOf="@+id/no_est_s_re"
        app:layout_constraintTop_toBottomOf="@+id/guestBtn"
        app:layout_constraintVertical_bias="0.123" />

    <TextView
        android:id="@+id/no_est_s_re"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="top"
        android:orientation="vertical"
        android:text="@string/noAccount"
        android:textAppearance="@style/no_est_s_re"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.375"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guestBtn"
        app:layout_constraintVertical_bias="0.121" />

    <View
        android:id="@+id/top_border"
        android:layout_width="match_parent"
        android:layout_height="229dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/top_border"
        android:clickable="false"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/estas_listo"
        android:layout_width="250dp"
        android:layout_height="24dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="top"
        android:orientation="vertical"
        android:text="@string/estas_listo"
        android:textAppearance="@style/estas_listo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.614"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bienvenido" />

    <TextView
        android:id="@+id/iniciar_ses"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/logIn"
        android:textAlignment="center"
        android:textAppearance="@style/iniciar_ses"
        android:translationZ="90dp"
        app:layout_constraintBottom_toBottomOf="@+id/welcomeBtn"
        app:layout_constraintEnd_toEndOf="@+id/welcomeBtn"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/welcomeBtn"
        app:layout_constraintTop_toTopOf="@+id/welcomeBtn"
        app:layout_constraintVertical_bias="0.39" />

    <Button
        android:id="@+id/welcomeBtn"
        android:layout_width="194dp"
        android:layout_height="56dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/rounded_corner"
        android:elevation="4dp"
        android:orientation="vertical"
        android:textColor="#494949"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_border"
        app:layout_constraintVertical_bias="0.24" />

    <Button
        android:id="@+id/guestBtn"
        android:layout_width="192dp"
        android:layout_height="55dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_corner_no_background"
        android:elevation="4dp"
        android:orientation="vertical"
        android:textColor="#494949"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/bot_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcomeBtn"
        app:layout_constraintVertical_bias="0.007" />

    <TextView
        android:id="@+id/ingresar_co"
        android:layout_width="0dp"
        android:layout_height="19dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textAlignment="center"
        android:text="@string/logInAsAGuest"
        android:textAppearance="@style/ingresar_co"
        app:layout_constraintBottom_toBottomOf="@+id/guestBtn"
        app:layout_constraintEnd_toEndOf="@+id/guestBtn"
        app:layout_constraintHorizontal_bias="0.965"
        app:layout_constraintStart_toStartOf="@+id/guestBtn"
        app:layout_constraintTop_toTopOf="@+id/guestBtn"
        app:layout_constraintVertical_bias="0.444" />

    <View
        android:id="@+id/bot_border"
        android:layout_width="match_parent"
        android:layout_height="229dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/bot_border"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />


</androidx.constraintlayout.widget.ConstraintLayout>